{
  "name": "netlify-plugin-edge",
  "version": "1.0.0",
  "description": "Netlify Build plugin to bundle Edge functions",
  "main": "index.js",
  "scripts": {
    "build": "rollup -c",
    "test": "npm run format",
    "format": "run-s format:*",
    "format:lint": "eslint --ignore-path .gitignore --fix --cache --format=codeframe --max-warnings=0 \"*.js\"",
    "format:prettier": "prettier --ignore-path .gitignore --write --loglevel warn \"*.{js,md,yml,json}\" \"!**/package-lock.json\" \"!package-lock.json\""
  },
  "keywords": [],
